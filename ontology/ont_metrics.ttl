            rdfs:domain :Patient ;
            rdfs:range xsd:float ;
            rdfs:label "patient BMI" .


###  http://www.perspectum.com/ontology#PatientSex
:PatientSex rdf:type owl:DatatypeProperty ;
            rdfs:domain :Patient ;
            rdfs:range [ rdf:type rdfs:Datatype ;
                         owl:oneOf [ rdf:type rdf:List ;
                                     rdf:first "Female" ;
                                     rdf:rest [ rdf:type rdf:List ;
                                                rdf:first "Male" ;
                                                rdf:rest rdf:nil
